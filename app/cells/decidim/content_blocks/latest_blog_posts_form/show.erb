
<% form.fields_for :settings, form.object.settings do |settings_fields| %>
  <%= settings_fields.translated :text_field, :title, label: t("decidim.content_blocks.latest_blog_posts.title") %>
  <%= settings_fields.translated :text_field, :link_text, label: t("decidim.content_blocks.latest_blog_posts.link_text") %>
  <%= settings_fields.translated :text_field, :link_url, label: t("decidim.content_blocks.latest_blog_posts.link_url") %>
  <%= settings_fields.number_field :count, label: t("decidim.content_blocks.latest_blog_posts.count") %>

  <% if blog %>
    <p class="callout secondary">
      <%= t("decidim.content_blocks.latest_blog_posts.info", blog: translated_attribute(blog.name), space: translated_attribute(blog.participatory_space.title)) %>
    </p>
  <% end %>

  <%= settings_fields.number_field :blog_id, label: t("decidim.content_blocks.latest_blog_posts.blog_id") %>
<% end %>
