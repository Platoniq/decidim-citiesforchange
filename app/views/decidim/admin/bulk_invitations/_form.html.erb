<div class="card with-overflow" id='bulk-invitations'>
  <div class="card-divider">
    <h2 class="card-title"><%=  t(".title") %></h2>
  </div>
  <div class="card-section">
    <%= form_tag Rails.application.routes.url_helpers.admin_bulk_invitations_path, multipart: true, class: 'form' do %>
      <p class="help-text"><%= t(".help_text", csv_columns: Decidim::Admin::BulkInvitations::BulkInviteUsersForm::CSV_COLUMNS.join(" ")).html_safe %></p>

      <%= label_tag :csv_file, t(".csv_file") %>
      <%= file_field_tag :csv_file, required: true %>

      <%= label_tag :csv_col_sep, t(".csv_col_sep") %>
      <%= select_tag :csv_col_sep, options_for_select(Decidim::Admin::BulkInvitations::BulkInviteUsersForm.csv_col_sep_options), include_blank: false, required: true %>

      <%= label_tag :bulk_invite_mode, t(".bulk_invite_mode") %>
      <%= select_tag :bulk_invite_mode, options_for_select(Decidim::Admin::BulkInvitations::BulkInviteUsersForm.bulk_invite_mode_options), include_blank: false, required: true %>

      <%= submit_tag t(".submit"), class: 'button', data: { disable_with: t(".submitting") } %>
    <% end %>
  </div>
</div>
