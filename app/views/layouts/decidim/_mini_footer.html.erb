<div class="custom-footer">
  <div class="row custom-logos custom-logos-<%= current_organization.instance_name %>">
    <% if current_organization.citiesforchange? %>
      <%= image_tag("GA_logo.jpg") %>
      <%= image_tag("logo_amsterdam_cityhall_1.png") %>
    <% elsif current_organization.degrowth? %>
      <div class="grid-x">
        <%= image_tag("degrowth/footer_logo_a1_ontgroei.png") %>
        <%= image_tag("degrowth/footer_logo_a2_wego-eu.jpg") %>
        <%= image_tag("degrowth/footer_logo_a3_iss.jpeg") %>
      </div>
      <div class="grid-x">
        <%= image_tag("degrowth/footer_logo_b1_aseed.png") %>
        <%= image_tag("degrowth/footer_logo_b2_casco.png") %>
        <%= image_tag("degrowth/footer_logo_b3_coderood.png") %>
        <%= image_tag("degrowth/footer_logo_b4_CommonsNetwork.png") %>
        <%= image_tag("degrowth/footer_logo_b5_CommunityEcon.jpeg") %>
        <%= image_tag("degrowth/footer_logo_b6_degrowth-info.png") %>
        <%= image_tag("degrowth/footer_logo_b7_FossielVrijNL.png") %>
        <%= image_tag("degrowth/footer_logo_b8_somo.png") %>
        <%= image_tag("degrowth/footer_logo_b9_TNI.png") %>
        <%= image_tag("degrowth/footer_logo_b10_uva.png") %>
      </div>
    <% end %>
  </div>
</div>
<div class="mini-footer">
  <div class="row">
    <div class="medium-7 large-8 column">
      <a rel="license noopener" class="cc-badge"
         href="http://creativecommons.org/licenses/by-sa/4.0/"
         target="_blank">
        <%= image_tag("decidim/cc-badge.png", alt: t("layouts.decidim.footer.cc_by_license")) %>
      </a>
      <%= t("layouts.decidim.footer.made_with_open_source").html_safe %>
    </div>
    <div class="medium-5 large-4 column logos">
      <div class="decidim-logo platoniq-logo">
        <a rel="decidim noopener"
           href="http://platoniq.net/"
           target="_blank"
           title="<%= t("platoniq.footer.logo") %>">
          <span class="platoniq-text show-for-medium"><%= t("platoniq.footer.text") %></span>
          <%= image_tag("platoniq/platoniq-logo.svg", alt: t("platoniq.footer.logo")) %>
        </a>
      </div>
      <div class="decidim-logo">
        <a rel="decidim noopener"
           href="https://decidim.org"
           target="_blank">
          <%= image_tag("decidim/decidim-logo.svg", alt: t("layouts.decidim.footer.decidim_logo")) %>
        </a>
      </div>
    </div>
  </div>
</div>
